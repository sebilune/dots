# ~/.zsh_aliases

# -----------------------
# Shorthand
# -----------------------

alias cd='z'

alias vim='nvim'

alias winx='explorer.exe'

alias ls='eza'
alias la='eza -la'
alias ll='eza -l'

alias py='python'
alias python='python3'
alias pip='pip3'

alias gs='git status --short'
alias ga='git add'
alias gc='git commit'
alias gp='git push'
alias gu='git pull'
alias gl='git log --oneline'
alias gb='git branch'
alias gi='git init'
alias gcl='git clone'

# -----------------------
# Custom
# -----------------------

alias update='sudo apt update && sudo apt upgrade -y && sudo apt autoremove -y && sudo apt clean && brew update && brew upgrade && brew autoremove && brew cleanup && bun update -g'

